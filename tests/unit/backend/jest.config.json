{
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@exmpl/(.*)": "<rootDir>/src/$1"
    },
    "extensionsToTreatAsEsm": [".ts"],
    "transform": {
      "^.+\\.(ts|tsx)?$": ["ts-jest", { "useESM": true }]
    },

    "preset": "ts-jest/presets/default-esm",
    "verbose": true,
    "testMatch": [
      "<rootDir>/**/*.test.ts"
    ]
  }